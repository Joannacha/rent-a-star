<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <a class="navbar-brand" href="#">
    <%= image_tag 'logo.jpg' %>
</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto d-flex align-items-center">
      <% if user_signed_in? %>
        <li class="nav-item active">
          <a class="nav-link" href="#">Rent your star</a>
        </li>      
        <li class="nav-item dropdown">
          <img class="avatar-large dropdown-toggle" id="navbarDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" src="https://kitt.lewagon.com/placeholder/users/ssaunier" />
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <a class="dropdown-item" href="#">My bookings</a>
            <a class="dropdown-item" href="#">My listings</a>
            <a class="dropdown-item" href="#">My profile</a>
            <%= link_to "Sign out",
                        destroy_user_session_path(@session),
                        method: :delete,
                        data: { confirm: "Are you sure you want to logout ?" },
                        class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item active">
          <a class="nav-link" href="#">Rent your star</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/users/sign_in">Sign in</a>
        </li>
      <% end %>
    </ul>
  </div>
</div>
