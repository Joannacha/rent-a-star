<div class="banner banner-index">
  <h1 class="text-center">OUR STARS</h1>
</div>
<div class="cards-star my-5">
  <% @stars.each do |star| %>
    <div class="card-star d-flex flex-column">
    <% if star.photos.empty? %>
      <div class="card-star-image" style="background-image: url('<%= image_url("logo.jpg") %>');">
    <% else  %>
      <div class="card-star-image" style="background-image: url('<%= url_for(star.photos.first) %>');">
    <% end  %>
      </div>
      <div class="card-star-infos d-flex flex-column justify-content-around m-3">
        <h1 class="m-0"><%= star.name %></h1>
        <%= link_to 'See details', star_path(star) %>
        <h2 class="m-0"><%= star.price %> â‚¬</h2>
        <%= link_to 'Rent this star', star_path(star), class: "btn btn-primary" %>
        <div class="rating">
          <% star.average_rating.times do %>
            <i class="fas fa-star pb-1"></i>
          <% end %>
          <% (5 - star.average_rating).times do %>
            <i class="far fa-star"></i>
          <% end %>
          ( <%= star.reviews.count %> rating )
        </div>
      </div>
    </div>
  <% end %>
</div>
