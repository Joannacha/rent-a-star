<%= simple_form_for(@star) do |f| %>
  <%= f.input :name, :required => false %>
  <%= f.input :price, :required => false %>
  <%= f.input :photos, as: :file, input_html: { class: 'd-none', multiple: true }, label_html: { class: 'btn-primaire text-center align-item-center pt-2' }  %>
  <hr>
  <%= f.submit 'Create a star', class: 'btn-primaire m-2' %>
<% end %>
