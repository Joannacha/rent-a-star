<%= simple_form_for(@star) do |f| %>
  <%= f.input :name, :required => false %>
  <%= f.input :price, :required => false %>
  <%= f.input :photos, as: :file, input_html: { class: 'd-none', multiple: true }, label_html: { class: 'btn m-0' }  %>
  <hr>
  <%= f.submit 'Add star', class: 'btn' %>
<% end %>
